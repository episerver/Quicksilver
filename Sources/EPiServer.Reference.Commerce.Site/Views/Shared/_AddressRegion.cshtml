@model EPiServer.Reference.Commerce.Site.Features.Shared.Models.Address

@{
    var originalHtmlFieldPrefix  = ViewData.TemplateInfo.HtmlFieldPrefix;
    ViewData.TemplateInfo.HtmlFieldPrefix = Model.HtmlFieldPrefix;
}

<div class="form-group address-region">
    @Html.LabelFor(formModel => formModel.Region)
    @if (Model.RegionOptions != null && Model.RegionOptions.Any())
    {
        @Html.DropDownListFor(formModel => formModel.Region, new SelectList(Model.RegionOptions, "Name", "Name", Model.Region), new { @class = "form-control address-region-input" });
    }
    else
    {
        @Html.TextBoxFor(formModel => formModel.Region, new { @class = "form-control address-region-input" })
    }
    @Html.ValidationMessageFor(formModel => formModel.Region)
</div>

@{
    ViewData.TemplateInfo.HtmlFieldPrefix = originalHtmlFieldPrefix;
}
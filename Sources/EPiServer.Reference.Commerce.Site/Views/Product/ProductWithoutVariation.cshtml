@using System.Web
@model EPiServer.Reference.Commerce.Site.Features.Product.Models.FashionProductViewModel

<div class="row">
    <div class="product-details jsProductDetails">
        <div class="col-xs-12 col-md-6 product-details__media">
            <img src="@Model.Images.First()">

        </div>              
            
        <div class="col-md-6 product-info">
            
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    <h3>@Html.DisplayFor(x => x.Product.DisplayName)</h3>
                </div>
                <div class="col-xs-12 col-md-4 pull-right">
                </div>
            </div>
           
            <p>
                @Html.PropertyFor(x => x.Product.Description)
            </p>
            <p>
                <strong>Code:</strong> @Html.DisplayFor(x => x.Product.Code)
            </p>
            <ul class="block-list">
                <li>@Html.PropertyFor(x => x.Product.Brand)</li>
                <li>@Html.PropertyFor(x => x.Product.LongDescription)</li>
            </ul>                
        </div>      
    </div>
</div>

@section Meta {
    @if (Model != null)
    {
        if (!String.IsNullOrEmpty(Model.Product.SeoInformation.Description))
        {
            <meta property="description" content="@Html.AttributeEncode(Model.Product.SeoInformation.Description)" />
        }
        else if (Model.Product.Description!= null && !Model.Product.Description.IsEmpty)
        {
            <meta property="description" content="@Html.AttributeEncode(Model.Product.Description)" />
        }
        if (!String.IsNullOrEmpty(Model.Product.SeoInformation.Keywords))
        {
            <meta property="keywords" content="@Html.AttributeEncode(Model.Product.SeoInformation.Keywords)" />
        }
    }
}